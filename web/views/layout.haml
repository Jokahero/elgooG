!!! 5
%html{:lang => "en"}
  %head
    %title elgooG
    %meta{:charset => "utf-8"}/
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}/
    %link{:rel => "stylesheet", :href => "/css/bootstrap.css"}/
    %link{:rel => "stylesheet", :href => "/css/custom.css"}/
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
        color: rgb(34, 34, 34);
      }

      footer {
        border-top: 1px solid rgb(235, 235, 235);
        padding: 3px 0px 10px 260px;
      }

      .main-container {
        padding-top: 112px;
      }
    %link{:rel => "stylesheet", :href => "/css/bootstrap-responsive.css"}/

  %body
    %div.navbar.navbar-fixed-top.navbar-inverse
      %div.navbar-inner
        %div.container
          %a.btn.btn-navbar{"data-toggle".to_sym => "collapse", "data-target".to_sym => ".nav-collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"} elgooG
          %div.nav-collapse.collapse
            %ul.nav
              - if @page == 'search'
                %li.active
                  %a{:href => "/"} Recherche
              - else
                %li
                  %a{:href => "/"} Recherche
              - if @page == 'about'
                %li.active
                  %a{:href => "/about"} À propos
              - else
                %li
                  %a{:href => "/about"} À propos

    %div.container
      =yield

    %footer.navbar-fixed-bottom
      %p elgooG - Tous droits réservés

    %script{:src => "/js/jquery.js"}
    %script{:src => "/js/bootstrap.js"}
    %script{:src => "/js/bootstrap-collapse.js"}
